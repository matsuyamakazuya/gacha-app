<h3>メニューを編集する</h3>
    <%= form_tag("/gachas/#{@gachas.id}", :method=>:patch) do %>
        <div class="form-group">
            <%= label_tag "form-menu", "メニュー"%>
            <%= text_field :gachas, :menu, id:"form-menu", class:"form-control",value:@gachas.menu%>
        </div>
        <div class="form-group">
            <%= label_tag "form-pricce", "価格"%>
            <%= number_field :gachas, :price, id:"form-price",class:"form-control",value:@gachas.price %>
        </div>
        <%= submit_tag "送信",class:"btn btn-primary" %>
    <% end %>